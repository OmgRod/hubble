            <div class="post-footer">
                <a class="like-btn" href="#">
                    <i class="bi bi-heart"></i>
                </a>
                <a class="comment-btn" href="#">
                    <i class="bi bi-chat-dots"></i>
                </a>
                <a class="share-btn" href="#">
                    <i class="bi bi-share"></i>
                </a>
            </div>
        </div>
