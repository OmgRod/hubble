<!DOCTYPE html>
<html lang="en">
<%- include('partials/head', {title: 'Home'}) %>
<body>
    <%- include('partials/navbar', { activeId: 'home' }) %>
    <main class="p-4">
        <h1>Welcome to Hubble!</h1>
        <div class="container mt-4">
          <div class="posts">
            <% posts.forEach(post => { %>
              <div class="card mb-3">
                <div class="card-body">
                  <h6 class="card-subtitle mb-2 text-muted">@<%= post.username %></h6>
                  <p class="card-text"><%= post.content %></p>
                  <small class="text-muted">
                    <%= new Date(post.created_at).toLocaleString() %>
                    Â· <%= post.likes %> likes
                  </small>
                </div>
              </div>
            <% }) %>
          </div>
        </div>
    </main>
</body>
</html>